---
import "../styles/index.css";
import "../styles/effects-library.css";

import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";
import NewHero from "../components/NewHero.astro";
import HeroWithSwiper from "../components/HeroWithSwiper.astro";

const projects = await getCollection("projects");
const posts = await getCollection("posts");

const name = "Stack-Junkie";
const openGraph = {
  home: {
    title: "Stack-Junkie",
    description: "Electronics tech turned AI-assisted developer documenting the journey to make my first dollar from coding."
  }
};
---

<Layout
	title={openGraph.home.title || name}
	description={openGraph.home.description}
	pagefindIgnore
>
	<NewHero slot="hero" projects={projects} />
	<div class="carousels-container">
		<HeroWithSwiper projects={projects} />
		<HeroWithSwiper posts={posts} />
	</div>
</Layout>

<style>
	.carousels-container {
		display: flex;
		flex-direction: column;
		gap: 1rem; /* Closer spacing */
	}
</style>
