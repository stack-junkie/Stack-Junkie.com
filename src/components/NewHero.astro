---
import HeroWithSwiper from './HeroWithSwiper.astro';
import type { CollectionEntry } from 'astro:content';

export interface Props {
  projects: CollectionEntry<"projects">[];
}

const { projects } = Astro.props;
---
<!-- import RecentPosts from './RecentPosts.astro'; -->

<section class="new-hero">
  <div class="hero-container">
    <div class="carousel-wrapper">
      <div class="hero-text">
        <h1 class="effect-hero-title">Minimum Viable Blog</h1>
        <p class="effect-hero-subtitle">"The universe is not only queerer than we suppose, but queerer than we can suppose... unless we're talking about the lifecycle of a side project MVP." Theoretical Physicist (probably)</p>
      </div>
    </div>
    <div class="posts-wrapper">
      <!--<RecentPosts /> -->
    </div>
  </div>
</section>

<style>
  .new-hero {
min-height: auto;
    display: flex;
    align-items: flex-start;
    justify-content: center;
    padding: 0.5rem 2rem;
    position: relative;
  }

  .hero-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    width: 100%;
    max-width: 1400px;
    align-items: center;
  }

  .carousel-wrapper {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    justify-content: center;
    align-items: center;
  }

  .posts-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .hero-text {
    text-align: center;
    max-width: 1000px;
    
  }

  /* Hero text styles moved to effects-library.css */
  .hero-title {
    /* Use effect-hero-title class */
  }

  .hero-subtitle {
    /* Use effect-hero-subtitle class */
  }

  @media (max-width: 1024px) {
    .hero-container {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 768px) {
    .new-hero {
      padding: 0.5rem 1rem; /* Reduce side padding on mobile */
    }
    
    .hero-text {
      max-width: 100%; /* Allow full width on mobile */
      padding: 0 0.5rem; /* Add some breathing room */
    }
  }

  @media (max-width: 480px) {
    .new-hero {
      padding: 0.25rem 0.5rem; /* Even less padding on very small screens */
    }
    
    .hero-text {
      padding: 0; /* Remove padding on very small screens */
    }
  }
</style>