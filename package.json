{
	"name": "stack-junkie-website",
	"description": "Personal blog and portfolio website for Stack Junkie - showcasing my journey as a developer",
	"type": "module",
	"version": "2.0.0",
	"author": "Stack Junkie",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/stack-junkie/Stack-Junkie.com.git"
	},
	"homepage": "https://stack-junkie.com",
	"packageManager": "npm@10.9.2",
	"engines": {
		"node": ">=20.0.0"
	},
	"scripts": {
		"dev": "astro dev",
		"build": "astro build",
		"start": "node dist/server/entry.mjs",
		"preview": "astro preview",
		"check": "astro check",
		"sync": "astro sync",
		"astro": "astro",
		"postbuild": "pagefind --site dist/client",
		"test": "vitest",
		"test:coverage": "vitest --coverage",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"validate": "pnpm run check && pnpm run lint && pnpm run test:coverage"
	},
	"dependencies": {
		"@astrojs/check": "^0.9.4",
		"@astrojs/mdx": "^4.3.0",
		"@astrojs/node": "^9.3.0",
		"@astrojs/sitemap": "^3.4.1",
		"@astrojs/vercel": "^8.2.2",
		"@iconify-json/lucide": "^1.2.20",
		"@iconify-json/simple-icons": "^1.2.18",
		"@iconify/utils": "^2.2.1",
		"@shikijs/themes": "^1.26.1",
		"@vercel/analytics": "^1.5.0",
		"astro-expressive-code": "^0.38.3",
		"sharp": "^0.33.5",
		"typescript": "^5.8.3",
		"zod": "^3.25.76"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@testing-library/dom": "^10.4.0",
		"@testing-library/jest-dom": "^6.6.3",
		"@vitest/coverage-v8": "^3.2.4",
		"astro": "^5.12.0",
		"happy-dom": "^18.0.1",
		"pagefind": "^1.3.0",
		"shiki": "^1.26.1",
		"vite": "^6.3.5",
		"vitest": "^3.2.4"
	}
}
